@model dynamic



@{
    Layout = null;
}

@using (Html.BeginForm("Index", "Videos", FormMethod.Get))
{
<div class="form-row">
    <div class="col-md-10">
        <input type="text" name="search" class="form-control" placeholder="Search for a video..." value="@Request["search"]" />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
</div>
}


